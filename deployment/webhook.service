[Unit]
Description=Webhook Listener Service
After=network.target

[Service]
Type=simple
User=webhook
Group=webhook
Restart=on-failure
RestartSec=1
WorkingDirectory=/srv/webhook
ExecStart=/srv/webhook/webhook -ip 127.0.0.1 -port 8999 -hooks /etc/webhook/hooks.json
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
